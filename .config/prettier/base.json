{
	"$schema": "https://json.schemastore.org/prettierrc",
	"printWidth": 102,
	"tabWidth": 4,
	"semi": true,
	"singleQuote": true,
	"trailingComma": "es5",
	"bracketSpacing": true,
	"arrowParens": "always",
	"overrides": [
		{
			"files": "**/*.md",
			"options": {
				"tabWidth": 2,
				"semi": false
			}
		},
		{
			"files": ["**/*.yml", "**/*.yaml"],
			"options": {
				"tabWidth": 2,
				"semi": false
			}
		}
	]
}
