{
	"$schema": "../../node_modules/oxlint/configuration_schema.json",
	"plugins": ["unicorn", "typescript", "oxc"],
	"rules": {
		"no-unused-vars": [
			"warn",
			{
				"argsIgnorePattern": "^_",
				"varsIgnorePattern": "^_",
				"caughtErrorsIgnorePattern": "^_"
			}
		],
		"no-useless-escape": "off",
		"no-unused-expressions": ["warn", { "allowShortCircuit": true }]
	},
	"ignorePatterns": ["dist"]
}
