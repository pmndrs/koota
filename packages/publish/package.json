{
	"name": "koota",
	"version": "0.5.1",
	"description": "ðŸŒŽ Performant real-time state management for React and TypeScript",
	"license": "ISC",
	"type": "module",
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./src/index.ts"
		},
		"./react": {
			"types": "./src/react.ts",
			"import": "./src/react.ts"
		}
	},
	"files": [
		"dist",
		"react",
		"README.md",
		"LICENSE"
	],
	"publishConfig": {
		"main": "./dist/index.cjs",
		"module": "./dist/index.js",
		"types": "./dist/index.d.ts",
		"exports": {
			".": {
				"types": {
					"import": "./dist/index.d.ts",
					"require": "./dist/index.d.cts"
				},
				"import": "./dist/index.js",
				"require": "./dist/index.cjs"
			},
			"./react": {
				"types": {
					"import": "./dist/react.d.ts",
					"require": "./dist/react.d.cts"
				},
				"import": "./dist/react.js",
				"require": "./dist/react.cjs"
			}
		}
	},
	"scripts": {
		"build": "tsup && node --no-warnings scripts/copy-readme.ts && node --no-warnings scripts/copy-react-files.ts",
		"test": "vitest --environment=jsdom",
		"generate-tests": "node scripts/generate-tests.ts"
	},
	"devDependencies": {
		"@config/typescript": "workspace:*",
		"@koota/core": "workspace:*",
		"@koota/react": "workspace:*",
		"@testing-library/react": "^16.3.0",
		"esbuild-plugin-inline-functions": "catalog:",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"tsup": "^8.5.0",
		"vitest": "catalog:"
	},
	"peerDependencies": {
		"@types/react": ">=18.0.0",
		"react": ">=18.0.0"
	},
	"peerDependenciesMeta": {
		"@types/react": {
			"optional": true
		},
		"react": {
			"optional": true
		}
	}
}
