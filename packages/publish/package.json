{
	"name": "koota",
	"version": "0.5.3",
	"description": "ðŸŒŽ Performant real-time state management for React and TypeScript",
	"license": "ISC",
	"type": "module",
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./src/index.ts"
		},
		"./react": {
			"types": "./src/react.ts",
			"import": "./src/react.ts"
		},
		"./devtools": {
			"types": "./src/devtools.ts",
			"import": "./src/devtools.ts"
		},
		"./devtools/plugin": {
			"types": "./src/devtools-plugin.ts",
			"import": "./src/devtools-plugin.ts"
		}
	},
	"files": [
		"dist",
		"react",
		"devtools",
		"README.md",
		"LICENSE"
	],
	"publishConfig": {
		"main": "./dist/index.cjs",
		"module": "./dist/index.js",
		"types": "./dist/index.d.ts",
		"exports": {
			".": {
				"types": {
					"import": "./dist/index.d.ts",
					"require": "./dist/index.d.cts"
				},
				"import": "./dist/index.js",
				"require": "./dist/index.cjs"
			},
			"./react": {
				"types": {
					"import": "./dist/react.d.ts",
					"require": "./dist/react.d.cts"
				},
				"import": "./dist/react.js",
				"require": "./dist/react.cjs"
			},
			"./devtools": {
				"types": {
					"import": "./dist/devtools.d.ts",
					"require": "./dist/devtools.d.cts"
				},
				"import": "./dist/devtools.js",
				"require": "./dist/devtools.cjs"
			},
			"./devtools/plugin": {
				"types": {
					"import": "./dist/devtools-plugin.d.ts",
					"require": "./dist/devtools-plugin.d.cts"
				},
				"import": "./dist/devtools-plugin.js",
				"require": "./dist/devtools-plugin.cjs"
			}
		}
	},
	"scripts": {
		"build": "pnpm build:core && pnpm build:devtools && pnpm build:plugin && node --no-warnings scripts/copy-readme.ts && node --no-warnings scripts/create-proxy-packages.ts",
		"build:core": "tsup",
		"build:devtools": "tsup --config tsup.devtools.config.ts",
		"build:plugin": "tsup --config tsup.plugin.config.ts",
		"test": "vitest --environment=jsdom",
		"generate-tests": "node scripts/generate-tests.ts"
	},
	"dependencies": {
		"unplugin": "^2.3.11"
	},
	"devDependencies": {
		"@config/typescript": "workspace:*",
		"@koota/core": "workspace:*",
		"@koota/devtools": "workspace:*",
		"@koota/react": "workspace:*",
		"@testing-library/react": "^16.3.0",
		"react": "catalog:",
		"react-dom": "catalog:",
		"tsup": "^8.5.1",
		"unplugin-inline-functions": "catalog:",
		"vitest": "catalog:"
	},
	"peerDependencies": {
		"@types/react": ">=18.0.0",
		"react": ">=18.0.0"
	},
	"peerDependenciesMeta": {
		"@types/react": {
			"optional": true
		},
		"react": {
			"optional": true
		}
	}
}
