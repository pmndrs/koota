{
	"name": "koota",
	"version": "0.5.3",
	"description": "ðŸŒŽ Performant real-time state management for React and TypeScript",
	"license": "ISC",
	"type": "module",
	"main": "./src/index.ts",
	"module": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./src/index.ts",
			"require": "./src/index.ts"
		},
		"./react": {
			"types": "./src/react.ts",
			"import": "./src/react.ts",
			"require": "./src/react.ts"
		},
		"./devtools": {
			"types": "./src/devtools.ts",
			"import": "./src/devtools.ts",
			"require": "./src/devtools.ts"
		},
		"./devtools/plugin": {
			"types": "./src/devtools-plugin.ts",
			"import": "./src/devtools-plugin.ts",
			"require": "./src/devtools-plugin.ts"
		}
	},
	"files": [
		"dist",
		"react",
		"devtools",
		"README.md",
		"LICENSE"
	],
	"publishConfig": {
		"type": "module",
		"exports": {
			".": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"./react": {
				"types": "./dist/react.d.ts",
				"default": "./dist/react.js"
			},
			"./devtools": {
				"types": "./dist/devtools.d.ts",
				"default": "./dist/devtools.js"
			},
			"./devtools/plugin": {
				"types": "./dist/devtools-plugin.d.ts",
				"default": "./dist/devtools-plugin.js"
			}
		}
	},
	"scripts": {
		"build": "pnpm clean && pnpm build:core && pnpm build:plugin && pnpm build:types && node --no-warnings scripts/copy-readme.ts && node --no-warnings scripts/create-proxy-packages.ts",
		"build:core": "rolldown -c rolldown.config.ts",
		"build:plugin": "rolldown -c rolldown.plugin.config.ts",
		"build:types": "rollup -c rolldown.dts.config.ts",
		"clean": "rm -rf dist",
		"test": "vitest --environment=jsdom",
		"generate-tests": "node scripts/generate-tests.ts"
	},
	"dependencies": {
		"unplugin": "^2.3.11"
	},
	"devDependencies": {
		"@config/typescript": "workspace:*",
		"@koota/core": "workspace:*",
		"@koota/devtools": "workspace:*",
		"@koota/react": "workspace:*",
		"@testing-library/react": "^16.3.0",
		"postcss": "^8.5.6",
		"react": "catalog:",
		"react-dom": "catalog:",
		"rolldown": "1.0.0-beta.53",
		"rollup-plugin-dts": "^6.3.0",
		"rollup-plugin-postcss": "^4.0.2",
		"unplugin-inline-functions": "catalog:",
		"vitest": "catalog:"
	},
	"peerDependencies": {
		"@types/react": ">=18.0.0",
		"@types/react-dom": ">=18.0.0",
		"react": ">=18.0.0",
		"react-dom": ">=18.0.0"
	},
	"peerDependenciesMeta": {
		"@types/react": {
			"optional": true
		},
		"@types/react-dom": {
			"optional": true
		},
		"react": {
			"optional": true
		},
		"react-dom": {
			"optional": true
		}
	}
}
